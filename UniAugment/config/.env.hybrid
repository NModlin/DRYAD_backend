# UniAugment HYBRID Stack Environment Configuration
# Staging environment with balanced dependencies

# Stack Configuration
STACK_TYPE=hybrid
ENVIRONMENT=staging
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=postgresql://uniaugment:changeme@postgres:5432/uniaugment
POSTGRES_USER=uniaugment
POSTGRES_PASSWORD=changeme
POSTGRES_DB=uniaugment

# Weaviate Configuration
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=

# Security
JWT_SECRET_KEY=staging-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
LLM_PROVIDER=mock
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://ollama:11434

# Application Configuration
DEPLOYMENT_DOMAIN=localhost
ENABLE_SSL=false

# API Configuration
API_TITLE=UniAugment API (HYBRID)
API_VERSION=1.0.0
API_DESCRIPTION=Agentic University System API - Staging

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=500
RATE_LIMIT_PERIOD=60

# Cache Configuration
CACHE_TTL=600
CACHE_MAX_SIZE=5000

# Task Scheduling
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Backup Configuration
BACKUP_RETENTION_DAYS=14

