# UniAugment Environment Configuration Template
# Copy this file to .env and update with your values

# Stack Configuration
# Options: lite, hybrid, full
STACK_TYPE=full
ENVIRONMENT=production
LOG_LEVEL=INFO

# Database Configuration
# For LITE: sqlite:///app/data/uniaugment.db
# For HYBRID/FULL: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://uniaugment:changeme@postgres:5432/uniaugment
POSTGRES_USER=uniaugment
POSTGRES_PASSWORD=changeme
POSTGRES_DB=uniaugment

# Redis Configuration (FULL stack only)
REDIS_URL=redis://redis:6379/0
REDIS_PASSWORD=

# Celery Configuration (FULL stack only)
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Weaviate Configuration (HYBRID/FULL stacks)
WEAVIATE_URL=http://weaviate:8080
WEAVIATE_API_KEY=

# Security
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
# Options: mock, ollama, openai
LLM_PROVIDER=mock
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://ollama:11434

# Grafana Configuration (FULL stack only)
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=admin

# Application Configuration
DEPLOYMENT_DOMAIN=localhost
ENABLE_SSL=false

# API Configuration
API_TITLE=UniAugment API
API_VERSION=1.0.0
API_DESCRIPTION=Agentic University System API

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Task Scheduling
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

# Backup Configuration
BACKUP_RETENTION_DAYS=30

# Monitoring (FULL stack only)
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8001

