# UniAugment LITE Stack Environment Configuration
# Development and testing with minimal dependencies

# Stack Configuration
STACK_TYPE=lite
ENVIRONMENT=development
LOG_LEVEL=DEBUG

# Database Configuration (SQLite)
DATABASE_URL=sqlite:///app/data/uniaugment.db

# Security
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# LLM Configuration
LLM_PROVIDER=mock
OPENAI_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434

# Application Configuration
DEPLOYMENT_DOMAIN=localhost
ENABLE_SSL=false

# API Configuration
API_TITLE=UniAugment API (LITE)
API_VERSION=1.0.0
API_DESCRIPTION=Agentic University System API - Development

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Task Scheduling
SCHEDULER_ENABLED=true
SCHEDULER_TIMEZONE=UTC

