# ============================================================================
# DRYAD.AI Production Environment Configuration
# Copy this file to .env.production and fill in the values
# ============================================================================

# ============================================================================
# Application Settings
# ============================================================================
DRYAD_ENV=production
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=*
CORS_ORIGINS=*

# ============================================================================
# Database Configuration
# ============================================================================
# For SQLite (default)
DATABASE_URL=sqlite:///data/DRYAD.AI.db

# For PostgreSQL (recommended for production)
# POSTGRES_DB=dryad
# POSTGRES_USER=dryad
# POSTGRES_PASSWORD=your-postgres-password-here
# DATABASE_URL=postgresql://dryad:your-postgres-password-here@postgres:5432/dryad

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=your-redis-password-here
REDIS_URL=redis://:your-redis-password-here@redis:6379/0

# ============================================================================
# LLM Configuration
# ============================================================================
# Ollama (local LLM)
OLLAMA_BASE_URL=http://ollama:11434

# OpenAI (cloud LLM)
OPENAI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO

# ============================================================================
# Security
# ============================================================================
# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# API Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ============================================================================
# Email Configuration (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@dryad.ai

# ============================================================================
# Monitoring (Optional)
# ============================================================================
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# ============================================================================
# Feature Flags
# ============================================================================
ENABLE_SANDBOX=true
ENABLE_MEMORY_GUILD=true
ENABLE_AGENT_REGISTRY=true
ENABLE_DOJO=false
ENABLE_LYCEUM=false

